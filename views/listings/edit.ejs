
<%-layout('/layouts/boilerplate')%>
<body>

<div class="row offset-2">
    <div class="col-md-8">
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="title" class="from-label">Title</label>
                <input type="text" name="listings[title]"  value="<%=listing.title %>" class="form-control" required>
                <div class="valid-feedback">Title looks Good!</div>
                <div class="invalid-feedback"> Enter a valid Title</div>
            </div> 
    
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listings[description]" class="form-control"  required><%=listing.description %></textarea>
                <div class="invalid-feedback">Enter A Valid Description</div>
            </div>
            <div class="row">

                <div class="col-4 mb-3">
                    <label for="location" class="label-from">Location</label>
                    <input type="text" name="listings[location]"  value="<%=listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Enter a Valid Location</div>
                </div>
        
                <div class="col-8">
                    <label for="country" class="form-label"> Country</label>
                    <input type="text" name="listings[country]"  value="<%=listing.country %>" class="form-control" required>
                    <div class="invalid-feedback">Enter a Valid Country</div>
                </div>
        

                

            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" name="listings[image]"  value="<%=listing.image %>" class="form-control" required>
                <div class="invalid-feedback">Enter a Valid URL</div>
            </div>
    
            <div class="mb-3">
                <label for="price" class="from-label"></label>
                <input type="number" name="listings[price]"  value="<%=listing.price %>" class="form-control" required>
                <div class="invalid-feedback">Enter a Valid Price</div>
            </div>
            <button class="btn add-btn">Edit</button>
        </form>
    </div>
</div>
     
   

   
</body>



